@using OgrenciNot.Models.EntitiyFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notlar Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>ÖĞRENCİ</th>
        <th>DERS</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var not in Model)
        {
        <tr>
            <td>@not.NOTID</td>
            <td>@not.TBLOGRENCILER.OGRAD @not.TBLOGRENCILER.OGRSOYAD</td>
            <td>@not.TBLDERSLER.DERSAD</td>
            <td>@not.SINAV1</td>
            <td>@not.SINAV2</td>
            <td>@not.SINAV3</td>
            <td>@not.PROJE</td>
            <td>@not.ORTALAMA</td>
            <td>@if (@not.DURUM == true) { <p>Geçti</p>} else { <p>Kaldı</p> }</td>
            <td style="text-align:center"><a href="/Notlar/SinavGetir/@not.NOTID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>

<a href="/Notlar/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>