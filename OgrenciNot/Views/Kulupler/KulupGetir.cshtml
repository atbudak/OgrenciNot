@model OgrenciNot.Models.EntitiyFramework.TBLKULUPLER
@{
    ViewBag.Title = "KulupGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kulüp Güncelleme Sayfası</h2><br /><br />

@using (Html.BeginForm("Guncelle", "Kulupler", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.KULUPAD)
    @Html.TextBoxFor(m => m.KULUPAD, new { @class = "form-control" })
</div>
@Html.HiddenFor(m => m.KULUPID)

<div style="margin:10px 0">
    <button class="btn btn-info"> Güncelle</button>
</div>
}