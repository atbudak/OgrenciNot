@using OgrenciNot.Models.EntitiyFramework
@model List<TBLKULUPLER>
    
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kulüpler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var kulup in Model)
        {
        <tr>
            <td>@kulup.KULUPID</td>
            <td>@kulup.KULUPAD</td>
            <td style="text-align:center;"><a href="/Kulupler/Sil/@kulup.KULUPID" class="btn btn-danger">Sil</a>
                <a href="/Kulupler/KulupGetir/@kulup.KULUPID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
            
        }
    </tbody>
</table>

<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Ekle</a>